<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.Menu.SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#23ba8f"
        android:layout_height="60dp">
      <ImageButton
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_gravity="center"
          android:background="@drawable/left"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="返回"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="设置"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="账号管理"
            android:layout_gravity="center"
            android:gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/setting_userimage_iv"
            android:layout_gravity="center_vertical"
            app:riv_oval="true"
            android:background="@drawable/head"
             />
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/right"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:text="手机号码"
                android:layout_gravity="center"
                android:gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="18248617820"
                android:id="@+id/phone_tv"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:layout_marginTop="15dp"
            android:id="@+id/mine_jupush_ll"
            android:orientation="horizontal">
            <!--<ImageView-->
                <!--android:layout_width="22dp"-->
                <!--android:layout_height="22dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:background="@drawable/message2" />-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="消息推送"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/notify_iv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:src="@drawable/on" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/clean_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">
            <!--<ImageView-->
                <!--android:layout_width="23dp"-->
                <!--android:layout_height="23dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:background="@drawable/clean_cache" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="清空缓存"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:text="产品介绍"
                android:layout_gravity="center"
                android:gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="25dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:text="关于我们"
                android:layout_gravity="center"
                android:gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="25dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/right"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_gary"
        android:id="@+id/exit_bt"
        android:text="退出登录"
        android:textSize="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</LinearLayout>