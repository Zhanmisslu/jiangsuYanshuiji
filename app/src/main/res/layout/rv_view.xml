<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fbfbfb"
        android:id="@+id/fragment_evaluate_indexrl"
        android:layout_height="wrap_content">

        <com.example.zhan.heathmanage.Main.EvaluteFragment.View.RingView
            android:id="@+id/rv_view"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <com.john.waveview.WaveView
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_evaluate_waveview"
        android:layout_width="match_parent"
        android:layout_below="@+id/fragment_evaluate_indexrl"
        android:layout_height="20dp"
        android:background="#faf9f9"
        wave:above_wave_color="#dd2ad9a6"
        wave:blow_wave_color="#22BA8E"
        wave:progress="80"
        wave:wave_height="little"
        wave:wave_hz="normal"
        wave:wave_length="middle" />
</LinearLayout>