<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.FindFragment.Fragment.AllFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#d3ffd5"
                android:id="@+id/fragment_all_user_ll"
                android:layout_height="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center|center_vertical"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:text="用户" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_all_user_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:id="@+id/fragment_all_showmoreuser_ll"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="查看更多用户"
                   android:gravity="center|left"
                   android:layout_marginLeft="30dp"
                   android:layout_gravity="center"
                   />
               <ImageButton
                   android:layout_width="15dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:background="@drawable/right"/>
           </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#d3ffd5"
                android:id="@+id/fragment_all_posting_ll"
                android:layout_height="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="动态" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_all_posting_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/fragment_all_showmoreposting_ll"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="查看更多动态"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center|center_vertical"
                    />
                <ImageButton
                    android:layout_width="15dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:background="@drawable/right"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>