<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:context=".Main.TrendFragment.Fragment.WeekFragment">

    <LinearLayout
        android:id="@+id/fragment_week_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/shape_gary">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/viewGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPager"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/weekpressuse_ll"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="18dp"
                        android:id="@+id/weekDiastolicBP_tv"
                        android:text="舒张压：" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="18dp"
                        android:id="@+id/weekDiastolicBPtype_tv"
                        android:text="正常" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weekSystolicBP_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="18dp"
                        android:text="收缩压：" />

                    <TextView
                        android:id="@+id/weekSystolicBPtype_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="18dp"
                        android:text="正常" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekheart_ll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="18dp"
                    android:text="心率：" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="18dp"
                    android:id="@+id/hearttype_tv"
                    android:text="正常" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/weekbloooxygen_ll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="18dp"
                    android:text="血氧：" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="18dp"
                    android:id="@+id/bloooxygentype_tv"
                    android:text="正常" />
            </LinearLayout>
            <TextView
                android:id="@+id/frament_week_suggest_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:padding="10dp"
                android:textSize="16dp"
                android:background="@drawable/shape_gary"
                android:text="建议" />

            <TextView
                android:id="@+id/frament_week_suggest1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="16dp"
                android:padding="10dp"
                android:background="@drawable/shape_newgreen"
                android:text="建议" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weeknodata_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/block" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="空空如也"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="65dp" />
</LinearLayout>