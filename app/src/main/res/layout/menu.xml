<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/menu_ll"
    android:background="#fff">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#23ba8f "
    android:orientation="vertical"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/main_user_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:riv_oval="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/head"/>
    <TextView
        android:id="@+id/menu_nickName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="战斗鸡"
        android:textSize="21sp"
        android:layout_marginLeft="20dp"
        />
<LinearLayout
    android:layout_marginLeft="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/main_attention_tv"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="关注"
        android:textSize="15sp"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_fan_tv"
        android:text="0"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="粉丝"
        android:textSize="15sp"/>
</LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/menu_user_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/menu_im"
            android:layout_marginLeft="20dp"
            android:layout_height="@dimen/menu_im"
            android:background="@drawable/usermessage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="个人信息"
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/menu_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/menu_emergencyuser_ll"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/menu_im"
            android:layout_height="@dimen/menu_im"
            android:layout_marginLeft="20dp"
            android:src="@drawable/emergencycontact"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/menu_text_size"
            android:layout_marginLeft="40dp"
            android:textColor="@color/menu_text_color"
            android:text="紧急联系人"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/menu_im"
                android:layout_height="@dimen/menu_im"
                android:layout_marginLeft="20dp"
                android:src="@drawable/mycollection"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/menu_text_size"
                android:layout_marginLeft="40dp"
                android:textColor="@color/menu_text_color"
                android:text="我的收藏"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/menu_changepsw_ll"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/menu_im"
                android:layout_height="@dimen/menu_im"
                android:layout_marginLeft="20dp"
                android:src="@drawable/changepassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/menu_text_size"
                android:layout_marginLeft="40dp"
                android:textColor="@color/menu_text_color"
                android:text="修改密码"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="40dp"
            android:orientation="vertical"
            android:id="@+id/menu_setting_ll"
            android:layout_marginBottom="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/setting"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:text="设置" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="40dp"
            android:orientation="vertical"
            android:id="@+id/menu_weather_ll"
            android:layout_marginBottom="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:id="@+id/menu_weathertype_iv"
                android:src="@drawable/cloudy"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:text="绍兴" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="40dp"
            android:orientation="vertical"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:layout_height="30dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:id="@+id/menu_temperature_tv"
                android:textSize="15dp"
                android:text="40" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>