<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Main.TrendFragment.TrendFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/fragment_evaluate_ll"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/month_tv"
        android:layout_width="80dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="9月"
        android:textColor="#333333"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/week_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/month_tv"
            android:text="周一"
            android:textColor="#444444"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/year_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/month_tv"
            android:text="2017年"
            android:textColor="#444444"
            android:textSize="12sp" />


    </LinearLayout>
    <ImageButton
        android:layout_width="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="3dp"
        android:layout_height="10dp"
        android:id="@+id/fragment_evaluate_ib"
        android:background="@drawable/upon"/>
    <!--<ImageButton-->
        <!--android:layout_width="10dp"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:layout_marginLeft="3dp"-->
        <!--android:layout_height="10dp"-->
        <!--android:visibility="gone"-->
        <!--android:id="@+id/fragment_evaluate_down_ib"-->
        <!--android:background="@drawable/down"/>-->
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/fragment_evaluate_view_ll"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tab_evalute_ll"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/tab_evalute_ib"
                    android:layout_width="23dp"
                    android:layout_height="35dp"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:clickable="false"
                    android:src="@drawable/evalute_press" />

                <TextView
                    android:id="@+id/tab_evalute_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="日视图"
                    android:textColor="#FF4081"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_trend_ll"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/tab_trend_ib"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:background="#00000000"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/trend" />
                <TextView
                    android:id="@+id/tab_trend_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周视图"
                    android:textColor="#272727"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_find_ll"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/tab_find_ib"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:background="#00000000"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/find" />
                <TextView
                    android:id="@+id/tab_find_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月视图"
                    android:textColor="#272727"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:layout_width="23dp"
                    android:layout_height="35dp"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:clickable="false"
                    android:src="@drawable/comingsoon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="敬请期待"
                    android:textColor="#FF4081"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C4C4C4"
        />

</LinearLayout>