<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.Menu.ChangePasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#23ba8f"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/changepw_back_ll"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/back"/>
        </LinearLayout>

        <TextView
            android:text="修改密码"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/changepw_confirm_ll"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="确认"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="70dp"
            android:gravity="center_vertical"
            android:text="旧密码"
            android:textSize="15sp"
            android:layout_height="match_parent" />
        <EditText
            android:textSize="15sp"
            android:id="@+id/changepw_old_et"
            android:layout_width="match_parent"
            android:background="#00ffffff"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginLeft="10dp"

        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="70dp"
            android:gravity="center_vertical"
            android:text="新密码"
            android:textSize="15sp"
            android:layout_height="match_parent" />
        <EditText
            android:textSize="15sp"
            android:id="@+id/changepw_new_et"
            android:layout_width="match_parent"
            android:background="#00ffffff"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:layout_height="1dp"/>


    <LinearLayout
        android:layout_marginLeft="10dp"

        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/changepw_new2_et"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:background="#00ffffff"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:layout_height="1dp"/>

</LinearLayout>